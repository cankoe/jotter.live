{
  "name": "@capture/editor",
  "version": "1.0.0",
  "description": "Shared CodeMirror-based capture editor with live preview, mentions, and hashtags",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
